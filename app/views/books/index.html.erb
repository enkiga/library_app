<section class="w-full flex flex-col">
  <h1 class="w-full font-semibold text-xl text-center mb-6">Available Books</h1>
  <div class="grid grid-cols-4 gap-4">
    <% @books.each do |book| %>
  <div class="book-card p-4 border border-gray-200 rounded">
    <h3 class="text-lg font-bold"><%= link_to book.title, book %></h3>
    <p class="">Author: <%= book.author %></p>
    <p class="">ISBN: <%= book.isbn %></p>
    <p class="">Status: <%= book.available? ? 'Available' : 'Borrowed' %></p>
  </div>
<% end %>
  </div>
</section>