<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6 mt-8">
  <h2 class="text-2xl font-bold mb-6 text-center">Sign Up</h2>

  <%= form_with model: @user, url: signup_path, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :name, class: "block text-gray-700 mb-2" %>
      <%= form.text_field :name, required: true, class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-gray-700 mb-2" %>
      <%= form.email_field :email, required: true, class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-gray-700 mb-2" %>
      <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-gray-700 mb-2" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-3 py-2 border rounded" %>
    </div>

    <%= form.submit "Create Account", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition-colors" %>
  <% end %>

  <div class="mt-4 text-center">
    <span class="text-gray-600">Already have an account? </span>
    <%= link_to "Login", login_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>